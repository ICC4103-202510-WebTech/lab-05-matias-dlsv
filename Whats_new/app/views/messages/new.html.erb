<%= form_with(model: @message, local: true) do |f| %>
    <% if @message.errors.any? %>
      <div id="error_explanation">
        <ul>
          <% @message.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div>
      <%= f.label :chat_id %>
      <%= f.select :chat_id, Chat.all.collect { |chat| [chat.sender.first_name + " to " + chat.receiver.first_name, chat.id] }, prompt: "Select Chat" %>
    </div>
  

  
    <div>
      <%= f.label :body %>
      <%= f.text_area :body %>
    </div>
  
    <div>
      <%= f.submit "Create Message" %>
    </div>
  <% end %>
  